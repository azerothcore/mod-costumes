[worldserver]

###################################################################################################
#    Costumes config
###################################################################################################
#
#    Costumes.Enabled
#        Description: Enables/Disables costumes.
#                     Nothing will happen if a player uses a costume item while the value is 0.
#        Default:     1
#
#    Costumes.SpellId
#        Description: The entry of the spell used by all costume items.
#        Default:     18282
#
#    Costumes.Duration
#        Description: The default duration in seconds of all costumes.
#                     Can be changed individually in the `costume` table with the `duration` column.
#        Default:     60
#
#    Costumes.Cooldown
#        Description: The default cooldown in seconds of all costumes.
#                     Can be changed individually in the `costume` table with the `cooldown` column.
#        Default:     240
#
#    Costumes.CanUseInCombat
#        Description: Allows players to use costumes while in combat.
#        Default:     0
#
#    Costumes.CanUseInPvP
#        Description: If CanUseInCombat is set to 1, this controls whether players can use costumes while in PvP combat.
#        Default:     0
#
#    Costumes.CanUseInBG
#        Description: Allows players to use costumes while in battleground.
#        Default:     0
#
#    Costumes.CanUseInArena
#        Description: Allows players to use costumes while in arena.
#        Default:     0

Costumes.Enabled = 1
Costumes.SpellId = 18282
Costumes.Duration = 60
Costumes.Cooldown = 240
Costumes.CanUseInCombat = 0
Costumes.CanUseInPvP = 0
Costumes.CanUseInBg = 0
Costumes.CanUseInArena = 0

